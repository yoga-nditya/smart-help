# Dockerfile.dev
FROM python:3.11-slim-bookworm

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# Bersihkan repo duplikat & pakai HTTPS sources
RUN set -eux; \
  rm -f /etc/apt/sources.list.d/debian.sources; \
  printf '%s\n' \
    'deb https://deb.debian.org/debian bookworm main' \
    'deb https://deb.debian.org/debian-security bookworm-security main' \
    'deb https://deb.debian.org/debian bookworm-updates main' \
    > /etc/apt/sources.list

# unixODBC + toolchain
RUN apt-get -o Acquire::Retries=5 update && apt-get install -y --no-install-recommends \
    ca-certificates curl gnupg \
    libodbc1 unixodbc unixodbc-dev \
    gcc g++ \
  && rm -rf /var/lib/apt/lists/*

# Microsoft repo + ODBC Driver 18 (pakai keyring modern)
RUN set -eux; \
  curl -fsSL https://packages.microsoft.com/keys/microsoft.asc \
    | gpg --dearmor -o /usr/share/keyrings/microsoft-prod.gpg; \
  echo "deb [signed-by=/usr/share/keyrings/microsoft-prod.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" \
    > /etc/apt/sources.list.d/mssql-release.list; \
  apt-get update; \
  ACCEPT_EULA=Y apt-get install -y --no-install-recommends msodbcsql18; \
  rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirment.txt .
RUN python -m pip install --upgrade pip && pip install -r requirment.txt

# Copy source
COPY . .

EXPOSE 8000
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
